{
  "connections": {
    "test-imap": {
      "protocol": "IMAP",
      "domain": "127.0.0.1",
      "ssl": false,
      "port": 3143,
      "login": "imap@domain.com",
      "password": "password"
    },
    "test-imap-ssl": {
      "protocol": "IMAP",
      "domain": "127.0.0.1",
      "ssl": true,
      "port": 3993,
      "login": "imap-ssl@domain.com",
      "password": "password"
    },
    "test-pop": {
      "protocol": "POP",
      "domain": "127.0.0.1",
      "ssl": false,
      "port": 3110,
      "login": "pop-ssl@domain.com",
      "password": "password"
    },
    "test-pop-ssl": {
      "protocol": "POP",
      "domain": "127.0.0.1",
      "ssl": true,
      "port": 3995,
      "login": "pop-ssl@domain.com",
      "password": "password"
    },
    "test-smtp": {
      "protocol": "SMTP",
      "domain": "127.0.0.1",
      "ssl": false,
      "port": 3025,
      "login": "smtp@domain.com",
      "password": "password"
    },
    "test-smtp-ssl": {
      "protocol": "SMTP",
      "domain": "127.0.0.1",
      "ssl": true,
      "port": 3465,
      "login": "smtp@domain.com",
      "password": "password"
    }
  },
  "filters": {
    "facebook-notification": {
      "connections": [
        "test-imap"
      ],
      "condition": "message.from_address.endswith('@facebookmail.com') and message.from_address.startswith('notification')",
      "actions": [
        "mark:read"
      ]
    },
    "autoreply": {
      "connections": [
        "test-imap"
      ],
      "condition": "message.to_address == 'testuser@tedivm.com'",
      "actions": [
        "mark:read"
      ]
    }
  }
}
